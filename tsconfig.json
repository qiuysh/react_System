{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "preserve",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "scripts",
    "src/components",
    "src/pages/books",
    "src/pages/messages",
    "src/pages/system",
    "src/pages/users",
    "src/pages/pageNotFound.ts",
    "src/components",
    "webpack",
  ],
  "include": [
    "./src/**/*"
  ]
}